<% if (page["__index"]) { %>
<style>
    .ml15 {
  font-weight: 500;
  font-size: 2.5em;
  text-transform: uppercase;
  letter-spacing: 0.5em;
}

.ml15 .word {
  display: inline-block;
  line-height: 1em;
}

hr {
  background-color: #4a4a4a;
}
    
.my_name {
  font-weight:800;
}
    
.my_name:hover {
  font-size: 1.2em;   
}
</style>


<h1 class="ml15" style="text-align:center">
  <span class="word">Welcome to</span>
  <a class="word my_name">waris radji's</a>
    <span class="word">blog!</span>
</h1>

<hr>

<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>

<script>
anime.timeline({loop: false})
  .add({
    targets: '.ml15 .word',
    scale: [14,1],
    opacity: [0,1],
    easing: "easeOutCirc",
    duration: 1000,
    delay: (el, i) => 800 * i
  })
</script>

<% } %>

<% page.posts.each(function(post){ %>
    <%- _partial('common/preview', { post, index: true }) %>
<% }); %>
<% if (page.total > 1) { %>
    <%- _partial('common/paginator') %>
<% } %>